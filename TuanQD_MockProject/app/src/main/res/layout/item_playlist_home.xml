<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="playlistModel"
            type="com.tuanqd.mockproject.home.PlaylistHomeModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cartView_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
      >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_playlist"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <ImageView
                android:id="@+id/imgPlaylist"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                app:imageResource="@{playlistModel.imageResource}"
                app:layout_constraintBottom_toTopOf="@id/txtBigPlaylist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </ImageView>

            <TextView
                android:id="@+id/txtBigPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@{playlistModel.bigText}"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPlaylist"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtSmallPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{playlistModel.smallText}"
                app:layout_constraintEnd_toEndOf="@+id/txtBigPlaylist"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtBigPlaylist"
                app:layout_constraintTop_toBottomOf="@+id/txtBigPlaylist"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>