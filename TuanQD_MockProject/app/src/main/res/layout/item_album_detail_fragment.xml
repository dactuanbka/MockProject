<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="AlbumDetailModel"
            type="com.tuanqd.mockproject.songs.albums.albumdetail.AlbumDetailModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/stroke_popup_menu_solid">

        <ImageView
            android:id="@+id/ic_play_song_artist_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:imageResource="@{AlbumDetailModel.iconPlayAlBumRes}"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/ic_play_music" />

        <TextView
            android:id="@+id/title_song_artist_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="songs"
            android:textColorHint="@color/white"
            android:text="@{AlbumDetailModel.titleSongOfAlbum}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ic_play_song_artist_detail"
            app:layout_constraintStart_toEndOf="@+id/ic_play_song_artist_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/duration_song_artist_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:hint="duration"
            android:gravity="center"
            android:text="@{AlbumDetailModel.duration}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_song_artist_detail"
            app:layout_constraintEnd_toStartOf="@+id/img_menu_playWave_artist_detail"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_song_artist_detail"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_menu_playWave_artist_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:imageResource="@{AlbumDetailModel.imgPlayAlbumDetailRes}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342"
            app:srcCompat="@drawable/ic_more_top_songs_artist_details" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>