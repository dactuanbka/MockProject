<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_view_popup_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_linear_popup_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/stroke_popup_menu</item>
    </style>
    <style name="style_settings_fragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/stroke_popup_menu</item>
    </style>

    <style name="style_imageView_popup_menu">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="style_imageView_settings_fragment">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:layout_weight">1</item>

    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="RectangleBorderImageStyle">
        <item name="cornerSize">10%</item>
    </style>
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="imageView_tableLayout_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="style_topAlbums_artist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MyPopupMenu"
        parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/background_menu</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_fade</item>
    </style>

</resources>